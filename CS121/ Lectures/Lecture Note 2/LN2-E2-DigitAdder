//CS1D - LN2 - E2
//Digits Adder

#include <iostream>

using namespace std;

int main(){
    // Declare Variable 'number'
    int number;

    // Ask user for input
    cout << "Enter a number between 0 and 1000: ";
    cin >> number;

    // Conversion
    int hundreds = (number % 1000) / 100; 
    int tens = (number % 100) / 10;
    int ones = number % 10; 

    // Declare sum as a placeholder of sums of all digits.
    int sum = hundreds + tens + ones;

    // Display Results
    cout << hundreds << endl;
    cout << tens << endl;
    cout << ones << endl;
    cout << "The sum of the digits is " << sum; 

    return 0; 
}
